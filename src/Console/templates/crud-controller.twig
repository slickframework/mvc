{% extends 'controller.twig' %}

{% block namespace %}
use Slick\Form\FormInterface;
use Slick\Form\FormRegistry;
use Slick\Mvc\Controller\CrudController;
use Slick\Mvc\Form\EntityForm;
use {{ entityClassName }};
{% endblock %}

{% block classDeclaration %}class {{ controllerName }} extends CrudController{% endblock %}

{% block classBody %}
    /**
     * @var string The entity FQ class name
     */
    protected $entityClassName = {{ entityName }}::class;

    /**
     * @var string URL base path for this controller
     */
    protected $basePath = '{{ basePath }}';

    /**
     * Gets the URL base path form this controller
     *
     * @return string
     */
    protected function getBasePath()
    {
        return $this->basePath;
    }

    /**
     * Gets the entity FQ class name
     *
     * @return string
     */
    public function getEntityClassName()
    {
        return $this->entityClassName;
    }

    /**
     * Gets the entity form object
     *
     * @return FormInterface|EntityForm
     */
    public function getForm()
    {
        return FormRegistry::getForm(__DIR__.'/Form/{{ formFilename }}.yml');
    }

{% endblock %}